<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="120sp"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="140sp"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1">

           <TextView
               style="@style/numberButton"
               android:id="@+id/AC"
               android:text="AC"
               />
           <TextView
               style="@style/numberButton"
               android:id="@+id/par1"
               android:text="("
               />
           <TextView
               style="@style/numberButton"
               android:id="@+id/par2"
               android:text=")"
               />
           <TextView
               style="@style/numberButton"
               android:id="@+id/div"
               android:text="/"
               />


       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1"
           >
           <TextView
               style="@style/actionButton"
               android:id="@+id/but7"
               android:text="7"
               />
           <TextView
               style="@style/actionButton"
               android:id="@+id/but8"
               android:text="8"
               />
           <TextView
               style="@style/actionButton"
               android:id="@+id/but9"
               android:text="9"
               />
           <TextView
               style="@style/numberButton"
               android:id="@+id/multiply"
               android:text="*"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1"
           >
           <TextView
               style="@style/actionButton"
               android:id="@+id/but4"
               android:text="4"
               />
           <TextView
               style="@style/actionButton"
               android:id="@+id/but5"
               android:text="5"
               />
           <TextView
               style="@style/actionButton"
               android:id="@+id/but6"
               android:text="6"
               />
           <TextView
               style="@style/numberButton"
               android:id="@+id/plus"
               android:text="+"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1"
           >

           <TextView
               style="@style/actionButton"
               android:id="@+id/but1"
               android:text="1"
               />
           <TextView
               style="@style/actionButton"
               android:id="@+id/but2"
               android:text="2"
               />
           <TextView
               style="@style/actionButton"
               android:id="@+id/but3"
               android:text="3"
               />
           <TextView
               style="@style/numberButton"
               android:id="@+id/minus"
               android:text="-"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:orientation="horizontal"
           android:layout_weight="1"
           >

           <TextView
               style="@style/actionButton"
               android:id="@+id/dot"
               android:text="."
               />
           <TextView
               style="@style/actionButton"
               android:id="@+id/but0"
               android:text="0"
               />
           <TextView
               style="@style/actionButton"
               android:id="@+id/back"
               android:text="back"
               />
           <TextView
               style="@style/numberButton"
               android:id="@+id/equal"
               android:text="="
               />

       </LinearLayout>

    </LinearLayout>

</LinearLayout>